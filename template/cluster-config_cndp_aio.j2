		  <initial-boot>
		  <default-user>cloud-user</default-user>
		  <default-user-ssh-public-key>ssh-rsa  cloud-user@inception</default-user-ssh-public-key>
          <default-user-password>Cisco@123</default-user-password>
          <default-user-password-expiration-days>0</default-user-password-expiration-days>
          <netplan>
            <ethernets>
              <device-id>eno1</device-id>
              <dhcp4>false</dhcp4>
              <dhcp6>false</dhcp6>
              <gateway4>{{cnbng_cp.node.gateway}}</gateway4>
              <nameservers>
                <search>{{cnbng_cp.node.domain}}</search>
                <addresses>{{cnbng_cp.node.dns}}</addresses>
              </nameservers>
            </ethernets>
            <ethernets>
              <device-id>eno2</device-id>
              <dhcp4>false</dhcp4>
              <dhcp6>false</dhcp6>
            </ethernets>
            <ethernets>
              <device-id>eno5</device-id>
              <dhcp4>false</dhcp4>
              <dhcp6>false</dhcp6>
            </ethernets>
            <ethernets>
              <device-id>eno6</device-id>
              <dhcp4>false</dhcp4>
              <dhcp6>false</dhcp6>
            </ethernets>
            <ethernets>
              <device-id>enp216s0f0</device-id>
              <dhcp4>false</dhcp4>
              <dhcp6>false</dhcp6>
            </ethernets>
            <ethernets>
              <device-id>enp216s0f1</device-id>
              <dhcp4>false</dhcp4>
              <dhcp6>false</dhcp6>
            </ethernets>
            <ethernets>
              <device-id>enp94s0f0</device-id>
              <dhcp4>false</dhcp4>
              <dhcp6>false</dhcp6>
            </ethernets>
            <ethernets>
              <device-id>enp94s0f1</device-id>
              <dhcp4>false</dhcp4>
              <dhcp6>false</dhcp6>
            </ethernets>
          </netplan>
        </initial-boot>
        <ucs-server>
          <cimc>
            <user>admin</user>
            <storage-adaptor>
              <create-virtual-drive>true</create-virtual-drive>
            </storage-adaptor>
            <remote-management>
              <sol>
                <enabled>true</enabled>
                <baud-rate>115200</baud-rate>
                <comport>com0</comport>
                <ssh-port>2400</ssh-port>
              </sol>
            </remote-management>
            <networking>
              <ntp>
                <enabled>true</enabled>
                <servers>
                  <url>{{cnbng_cp.cluster.ntp}}</url>
                </servers>
              </ntp>
            </networking>
          </cimc>
        </ucs-server>
        <os>
          <ntp>
            <servers>
              <url>{{cnbng_cp.cluster.ntp}}</url>
            </servers>
            <enabled>true</enabled>
          </ntp>
        </os>
      </node-defaults>
      <nodes>
        <name>aio</name>
        <host-profile>{{images.host_profile.name}}</host-profile>
        <k8s>
          <node-type>master</node-type>
          <ssh-ip>{{cnbng_cp.node.ip}}</ssh-ip>
          <node-ip>{{cnbng_cp.node.ip}}</node-ip>
          <node-labels>
            <key>disktype</key>
            <value>ssd</value>
          </node-labels>
          <node-labels>
            <key>smi.cisco.com/node-type</key>
            <value>oam</value>
          </node-labels>
        </k8s>
        <ucs-server>
          <cimc>
            <user>{{cimc.user}}</user>
            <password>{{cimc.password}}</password>
            <ip-address>{{cimc.ip}}</ip-address>
          </cimc>
        </ucs-server>
        <initial-boot>
          <netplan>
            <ethernets>
              <device-id>eno1</device-id>
              <addresses>{{cnbng_cp.node.ip}}/24</addresses>
              <gateway4>{{cnbng_cp.node.gateway}}</gateway4>
            </ethernets>
          </netplan>
        </initial-boot>
      </nodes>
			<ops-centers>
				<app-name>bng</app-name>
				<instance>bng</instance>
				<repository-local>{{images.bng.name}}</repository-local>
				<sync-default-repository>true</sync-default-repository>
				<netconf-ip>{{cnbng_cp.node.ip}}</netconf-ip>
				<netconf-port>{{cnbng_cp.cluster.bng_ops_center.netconf_port}}</netconf-port>
				<ssh-ip>{{cnbng_cp.node.ip}}</ssh-ip>
				<ssh-port>{{cnbng_cp.cluster.bng_ops_center.ssh_port}}</ssh-port>
				<ingress-hostname>{{cnbng_cp.node.ip}}.nip.io</ingress-hostname>
				<initial-boot-parameters>
					<use-volume-claims>true</use-volume-claims>
					<first-boot-password>Cisco@123</first-boot-password>
					<auto-deploy>false</auto-deploy>
					<single-node>true</single-node>
				</initial-boot-parameters>
			</ops-centers>
			<ops-centers>
				<app-name>cee</app-name>
				<instance>global</instance>
				<repository-local>{{images.cee.name}}</repository-local>
				<sync-default-repository>true</sync-default-repository>
				<netconf-ip>{{cnbng_cp.node.ip}}</netconf-ip>
				<netconf-port>{{cnbng_cp.cluster.cee_ops_center.netconf_port}}</netconf-port>
				<ssh-ip>{{cnbng_cp.node.ip}}</ssh-ip>
				<ssh-port>{{cnbng_cp.cluster.cee_ops_center.ssh_port}}</ssh-port>
				<ingress-hostname>{{cnbng_cp.node.ip}}.nip.io</ingress-hostname>
				<initial-boot-parameters>
					<use-volume-claims>true</use-volume-claims>
					<first-boot-password>Cisco@123</first-boot-password>
					<auto-deploy>true</auto-deploy>
					<single-node>true</single-node>
				</initial-boot-parameters>
			</ops-centers>
      <addons>
        <ingress>
          <bind-ip-address>{{cnbng_cp.node.ip}}</bind-ip-address>
          <enabled>true</enabled>
        </ingress>
        <istio>
          <enabled>{{cnbng_cp.cluster.istio}}</enabled>
        </istio>
      </addons>
    </clusters>
</config>